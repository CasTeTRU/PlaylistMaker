<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/yp_black</item>

        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>


    </style>
</resources>