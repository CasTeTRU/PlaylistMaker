<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    >

    <TextView
        android:id="@+id/app_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/Theme.PlaylistMaker"
        android:background="@color/background_main"
        android:text="@string/app_name"
        android:textColor="@color/yp_white"
        android:textSize="22sp"
        android:fontFamily="@font/ys_display_regular"
        />

    <Button
        android:id="@+id/btnSearch"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginHorizontal="@dimen/button_margin"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/search"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconTint="@color/surface" />

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginHorizontal="@dimen/button_margin"

        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/library"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_library"
        app:iconGravity="textStart"
        app:iconTint="@color/surface" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginHorizontal="@dimen/button_margin"

        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/settings"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconTint="@color/surface" />
</LinearLayout>