<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/background_settings"
    android:theme="@style/Theme.PlaylistMaker"
    android:fitsSystemWindows="true"
    >

    <Button
        app:icon="@drawable/ic_arrow_back"
        app:iconGravity="start"
        app:iconTint="@color/icon_color"

        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="start|center_vertical"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/settings"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"
        />




    <Switch
        style="@style/ButtonStyle"

        android:text="@string/night_theme"
        android:id="@+id/night_switch"
        android:fontFamily="sans-serif-medium"
        android:background="@color/switch_track"
        android:stateListAnimator="@null"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"
        />


    <Button
        app:icon="@drawable/ic_share"
        app:iconGravity="end"
        app:iconTint="@color/icon_color"
        android:stateListAnimator="@null"
        style="@style/ButtonStyle"
        android:id="@+id/share_app_button"
        android:text="@string/share"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"
        />

    <Button
        app:icon="@drawable/ic_support"
        app:iconGravity="end"
        app:iconTint="@color/icon_color"
        android:stateListAnimator="@null"
        style="@style/ButtonStyle"
        android:id="@+id/contact_support_button"
        android:text="@string/support"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"
        />

    <Button
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="end"
        app:iconTint="@color/icon_color"
        android:stateListAnimator="@null"
        style="@style/ButtonStyle"
        android:id="@+id/terms_of_service_button"
        android:text="@string/agreement"
        android:backgroundTint="@color/button_background"
        android:textColor="@color/button_text_color"
        />



</LinearLayout>