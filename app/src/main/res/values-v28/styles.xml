<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:thumbTint">@color/switch_thumb</item>
        <item name="android:trackTint">@color/switch_track</item>
        <item name="android:background">@color/yp_white</item>
        <item name="iconTint">@color/yp_text_grey</item>
        <item name="iconSize">24dp</item>

    </style>
</resources>